
{
  "version": 6,
  "cmakeMinimumRequired": { "major": 3, "minor": 28, "patch": 0 },

  "configurePresets": [
    {
      "name": "debug",
      "displayName": "Debug configure",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_CXX_EXTENSIONS": "OFF",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "release",
      "displayName": "Release configure",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_CXX_EXTENSIONS": "OFF",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "test",
      "displayName": "Test-only configure",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build/test",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_CXX_EXTENSIONS": "OFF",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    }
  ],

  "buildPresets": [
    {
      "name": "debug",
      "displayName": "Build Debug (all)",
      "configurePreset": "debug",
      "jobs": 3
    },
    {
      "name": "release",
      "displayName": "Build Release (all)",
      "configurePreset": "release",
      "jobs": 3
    },
    {
      "name": "test",
      "displayName": "Build test apps",
      "configurePreset": "test",
      "targets": [ "testfd", "xmltest" ],
      "jobs": 3
    }
  ],

  "testPresets": [
    {
      "name": "test",
      "displayName": "Run CTest for test preset",
      "configurePreset": "test",
      "execution": {
        "jobs": 3,
        "stopOnFailure": true
      },
      "output": {
        "shortProgress": true,
        "verbosity": "default"
      },
      "filter": {
        "include": {
          "tests": [ "testfd", "xmltest" ]
        }
      }
    }
  ],

  "workflowPresets": [
    {
      "name": "test",
      "displayName": "Debug + Test Workflow",
      "steps": [
        { "type": "configure", "name": "debug" },
        { "type": "build", "name": "debug" },
        { "type": "configure", "name": "test" },
        { "type": "build", "name": "test" },
        { "type": "test", "name": "test" }
      ]
    }
  ]
}

